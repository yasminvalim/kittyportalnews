  <div class='container'>
    <div class='row'>
      <div class='col-md-10 col-lg-8 offset-md-1 offset-lg-2'>
        <div class='card mt-5'>
          <% @posts.each do |post| %>
          <div class="card-body">
            <h5 class="card-title"> <%= link_to post.title, admin_backoffice_post_path(post), class:"text-info h3" %></h5>
            <p class="card-text text-muted text-justify"> <%= truncate(post.content, length: 300) %></p>
              <div class="card-body">
            <small class="card-text text-muted"> Created by: <%= post.user.email if post.user %>,
              <%= time_ago_in_words(post.created_at) %> ago,
              last updated: <%= time_ago_in_words(post.updated_at) %> ago</small>
              </div>
            <div class="card-body">
            <%= link_to "EDIT", edit_admin_backoffice_post_path(post), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "DELETE", admin_backoffice_post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"}, class: "btn btn-sm btn-outline-danger" %>
            <br>
            </div>
          </div>
          <% end %>
        </div>
          <%= link_to "BACK", admin_backoffice_index_path, class: "btn btn-block btn-info" %>
      </div>
    </div>
  </div>

