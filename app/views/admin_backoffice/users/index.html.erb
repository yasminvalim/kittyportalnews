  <div class='container'>
    <div class='row'>
      <div class='col-md-10 col-lg-8 offset-md-1 offset-lg-2'>
        <div class='card mt-5'>
          <% @users.each do |user| %>
          <div class="card-body">
            <h5 class="card-title text-center"> <%= link_to user.email, admin_backoffice_user_path(user), class:"text-info h3" %></h5>
            <p class="card-text text-center"> 
            <%= pluralize(user.posts.count, "posts") unless !user.is_admin? %></p>
            <%= pluralize(user.comments.count, "comments") if user.comments %>
            <div class="card-body">
            <%= link_to "EDIT", edit_admin_backoffice_user_path(user), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to "BAN", admin_backoffice_user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user?"}, class: "btn btn-sm btn-outline-danger" %>
            <br>
            </div>
          </div>
          <% end %>
        </div>
          <%= link_to "BACK", admin_backoffice_index_path, class: "btn btn-block btn-info" %>
      </div>
    </div>
  </div>

