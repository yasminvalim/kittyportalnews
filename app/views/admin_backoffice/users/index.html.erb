<div class='container'>
  <div class='row'>
    <div class='col-md-10 col-lg-8 offset-md-1 offset-lg-2'>
      <div class='card mt-5'>
        <% @users.each do |user| %>
          <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to user.email, admin_backoffice_user_path(user), class:"text-info h3" %>
              <small class="text-muted"><%= user.comments.count if user.comments%>
                comments</small>
              <% if user.is_admin? %>
                <small class="text-muted">
                  <%= user.posts.count if user.posts%>
                  posts
                </small>
                <span class="badge badge-primary badge-pill">ADMINISTRATOR
                </span>
              <% else %>
                <span class="badge badge-primary badge-pill">REGULAR USER
                </span>
              <% end %>
            </li>
          </ul>
        <%end%>
        <br>
        <%= link_to "BACK", admin_backoffice_index_path, class: "btn btn-sm btn-secondary" %>
      </div>
    </div>
  </div>
</div>
