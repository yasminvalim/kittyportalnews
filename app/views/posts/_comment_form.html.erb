<div class="card-body">
  <%= form_for(@comment) do |f| %>
  <div class="input-group mb-1">
    <%= f.hidden_field :post_id %>
    <%= f.text_field :content, class: "form-control", placeholder: "Comment about this!", autofocus: true %>
    <div class="input-group-append">
      <%= f.submit "Comment", class: 'btn btn-info input-group-btn' %>
    <% end %>
  </div>
