<br>
<div class="jumbotron-fluid bg-white">
  <h2 class="display-4 text-uppercase text-center text-info font-weight-bold"><%= @post.title %></h2>
  <small>
    Created by:
    <%= @post.user.email if @post.user%>,
    <%= time_ago_in_words(@post.created_at) %>
    ago, last updated:
    <%= time_ago_in_words(@post.updated_at) %>
    ago
  </small>
  <hr class="my-9">
  <p class="lead text-justify text-muted"><%= @post.content %></p>
  <% if current_user == @post.user %>
    <br>
    <%= link_to "Edit", edit_admin_backoffice_post_path(@post), class: "btn btn-sm btn-success" %>
    <%= link_to "Delete",admin_backoffice_post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"}, class: "btn btn-sm btn-danger" %>
    <%= link_to "All my posts", admin_backoffice_posts_path, class: "btn btn-sm btn-outline-secondary" %>
  <% end %>
  <hr class="my-6">
</div>
<%= render "show_comments" %>
<% if user_signed_in? %>
  <%= render "comment_form" %>
<% end %>
